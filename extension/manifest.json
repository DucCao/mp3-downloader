{
  "manifest_version": 2,

  "name": "MP3-Downloader",
  "description": "Download mp3 from zing play list.",
  "version": "1.0",

  "page_action": {
    "default_icon": "img/song_download.png",
    "default_title": "Song downloader",
    "default_popup": "html/popup.html"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "http://mp3-downloader.appspot.com/"
  ],

  "web_accessible_resources": [
    "html/popup.html",
    "css/bootstrap.min.css",
    "css/bootstrap-responsive.min.css",
    "css/style.css",
    "js/bootstrap.min.js",
    "js/jquery.min.js",
    "js/script.js"
  ],

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  }
}